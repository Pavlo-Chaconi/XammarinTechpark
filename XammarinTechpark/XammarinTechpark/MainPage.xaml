<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XammarinTechpark.MainPage"
             Title="Технопарк">


    <StackLayout Margin="0" Spacing="0" Background="white">
        <Frame Background="white" CornerRadius="0" HasShadow="False">
            <StackLayout>
                <Label Text="Добро пожаловать в Приложение Кузбасского Технопарка" FontSize="Large" TextColor="black" ></Label>
            </StackLayout>
        </Frame>
        <Frame Margin="10" BorderColor="Black" CornerRadius="50" HeightRequest="60" WidthRequest="60" IsClippedToBounds="True" HorizontalOptions="Center" VerticalOptions="Center">
            <Image Source="logo.png" Aspect="AspectFill" Margin="-20" HeightRequest="100" WidthRequest="100"/>
        </Frame>
        <StackLayout Margin="10">
            <Button Padding="20" Text="Войти" Clicked="Login_Button_Clicked" ></Button>
            <Button Padding="20" Text="Регистрация" Clicked="Registration_Button_Clicked"></Button>
        </StackLayout>
        <StackLayout Margin="0,200,0,0" Padding="0,100,0,0" VerticalOptions="End" HorizontalOptions="Center">
            <Label Text="2022 АО Кузбасский Технопарк" VerticalOptions="End" HorizontalOptions="End"></Label>
        </StackLayout>
    </StackLayout>

</ContentPage>